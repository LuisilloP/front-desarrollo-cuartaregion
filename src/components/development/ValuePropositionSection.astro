---
import QuoteCallout from "./QuoteCallout.astro";
import ValueCompareCard from "./ValueCompareCard.astro";

interface CompareCard {
  title: string;
  text: string;
  bullets: string[];
  icon?: string;
}

interface Props {
  eyebrow: string;
  title: string;
  text: string;
  quote: string;
  negativeCard: CompareCard;
  positiveCard: CompareCard;
  sectionId?: string;
}

const {
  eyebrow,
  title,
  text,
  quote,
  negativeCard,
  positiveCard,
  sectionId = "propuesta",
} = Astro.props as Props;
---

<section id={sectionId} class="relative overflow-hidden py-20 lg:py-32">
  <div class="absolute inset-0 -z-10">
    <div
      class="absolute top-10 left-1/4 h-64 w-64 rounded-full bg-sky-500/10 blur-3xl dark:bg-sky-400/10"
    >
    </div>
    <div
      class="absolute bottom-0 right-1/4 h-72 w-72 rounded-full bg-emerald-500/10 blur-3xl dark:bg-emerald-400/10"
    >
    </div>
    <div
      class="absolute inset-0 opacity-[0.035] dark:opacity-[0.05]"
      style="background-image: radial-gradient(circle at 1px 1px, rgb(0 0 0 / 0.6) 1px, transparent 0); background-size: 42px 42px;"
    >
    </div>
  </div>

  <div class="section-shell grid gap-12 lg:grid-cols-[1.05fr_0.95fr] lg:items-start">
    <div class="space-y-6" data-reveal="fade-up">
      <p
        class="inline-flex items-center rounded-full border border-primary/20 bg-primary/10 px-4 py-2 text-xs font-semibold uppercase tracking-[0.24em] text-primary"
      >
        {eyebrow}
      </p>
      <h2 class="font-display text-3xl leading-tight text-content sm:text-4xl">
        {title}
      </h2>
      <p class="max-w-[52ch] text-lg leading-relaxed text-muted">
        {text}
      </p>
      <QuoteCallout quote={quote} />
    </div>

    <div class="space-y-6">
      <div data-reveal="fade-up">
        <ValueCompareCard tone="negative" {...negativeCard} />
      </div>
      <div data-reveal="fade-up" data-delay="80">
        <ValueCompareCard tone="positive" {...positiveCard} />
      </div>
    </div>
  </div>
</section>
