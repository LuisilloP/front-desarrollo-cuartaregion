---
import type { Service } from "../data/mock";
import ServiceCard from "./ServiceCard.astro";
import { Icon } from "astro-icon/components";

interface Props {
  services: Service[];
  whatsappNumber: string;
}

const { services, whatsappNumber } = Astro.props;
const sortedServices = [...services].sort((a, b) => (a.order ?? 99) - (b.order ?? 99));
---

<section id="servicios" class="py-20 lg:py-32">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <div class="mb-4 inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-medium
      bg-sky-500/10 text-sky-600
      dark:bg-sky-400/10 dark:text-sky-300">
        <Icon name="lucide:rocket" class="h-4 w-4" />
        Soluciones a tu medida
      </div>
      <h2 class="text-4xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-5xl">
        Soluciones claras para cada necesidad
      </h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-white/60">
        Cada servicio está diseñado para entregar resultados tangibles. Explora nuestras soluciones y contáctanos para una cotización en menos de 24 horas hábiles.
      </p>
    </div>

    <!-- Services Grid -->
    <div id="services-grid" class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {sortedServices.map((service) => (
        <div class="service-card-wrapper">
          <ServiceCard service={service} whatsappNumber={whatsappNumber} />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .service-card-wrapper {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transition-delay: var(--delay, 0s);
  }
  .service-card-wrapper.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const grid = document.getElementById('services-grid');
    if (!grid) return;

    const cards = grid.querySelectorAll('.service-card-wrapper');

    const observer = new IntersectionObserver((entries, obs) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          cards.forEach((card, index) => {
            const cardElement = card as HTMLElement;
            cardElement.style.setProperty('--delay', `${index * 100}ms`);
            cardElement.classList.add('is-visible');
          });
          obs.unobserve(grid); // Stop observing after animation is triggered
        }
      });
    }, {
      threshold: 0.1, // Trigger when 10% of the grid is visible
      rootMargin: '0px 0px -50px 0px' // Trigger a bit before it's fully in view
    });

    observer.observe(grid);
  });
</script>
