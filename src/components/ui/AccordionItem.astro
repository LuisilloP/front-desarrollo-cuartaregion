---
import { Icon } from "astro-icon/components";

interface Props {
  question: string;
  answer: string;
  defaultOpen?: boolean;
}

const { question, answer, defaultOpen = false } = Astro.props;
---
<details 
  class="group rounded-2xl border shadow-lg transition-shadow duration-300 hover:shadow-2xl
  border-slate-900/10 bg-white/30 
  dark:border-white/10 dark:bg-white/5" 
  open={defaultOpen}
>
  <summary class="flex cursor-pointer list-none items-center justify-between p-6">
    <span class="text-lg font-semibold text-slate-900 dark:text-white">
      {question}
    </span>
    <div class="rounded-full p-2 transition-colors bg-slate-200/50 group-hover:bg-slate-200 dark:bg-white/10 dark:group-hover:bg-white/20">
      <Icon name="lucide:chevron-down" class="h-5 w-5 text-slate-700 dark:text-white transition-transform duration-300 ease-in-out group-open:-rotate-180" />
    </div>
  </summary>

  <div class="grid grid-rows-[0fr] transition-[grid-template-rows] duration-300 ease-in-out group-open:grid-rows-[1fr]">
    <div class="overflow-hidden">
      <p class="px-6 pb-6 text-base text-slate-600 dark:text-white/60">
        {answer}
      </p>
    </div>
  </div>
</details>
