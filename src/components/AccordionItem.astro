---
interface Props {
  question: string;
  answer: string;
  defaultOpen?: boolean;
}

const { question, answer, defaultOpen = false } = Astro.props;
---

<details class="group rounded-2xl border border-border bg-card/70 p-4" open={defaultOpen}>
  <summary
    class="flex items-center justify-between cursor-pointer text-content font-semibold text-base focus:outline-none focus-visible:ring-2 focus-visible:ring-highlight rounded"
  >
    {question}
    <span class="text-muted/70 group-open:rotate-45 transition-transform text-xl">+</span>
  </summary>
  <div class="mt-3 text-muted text-sm leading-relaxed">{answer}</div>
</details>
