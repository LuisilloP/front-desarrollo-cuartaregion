---
interface Props {
  question: string;
  answer: string;
  defaultOpen?: boolean;
}

const { question, answer, defaultOpen = false } = Astro.props;
---

<details class="faq-item rounded-2xl border border-border bg-card p-4" open={defaultOpen} data-faq>
  <summary
    class="flex items-start gap-3 cursor-pointer text-content font-semibold text-base leading-snug text-left focus:outline-none focus-visible:ring-2 focus-visible:ring-highlight rounded"
    data-faq-summary
  >
    <span class="flex-1">{question}</span>
    <span class="faq-toggle mt-0.5 text-muted/70 transition-transform text-xl">+</span>
  </summary>
  <div class="faq-answer" data-faq-content>
    <div class="mt-3 text-muted text-sm leading-relaxed whitespace-pre-line">{answer}</div>
  </div>
</details>
