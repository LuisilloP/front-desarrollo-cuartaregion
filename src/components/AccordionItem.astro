---
interface Props {
  question: string;
  answer: string;
  defaultOpen?: boolean;
}

const { question, answer, defaultOpen = false } = Astro.props;
---

<details class="group rounded-2xl border border-slate-200 bg-white/70 p-4 dark:border-slate-800 dark:bg-slate-900/50" open={defaultOpen}>
  <summary
    class="flex items-center justify-between cursor-pointer text-slate-900 dark:text-white font-semibold text-base focus:outline-none focus-visible:ring-2 focus-visible:ring-highlight rounded"
  >
    {question}
    <span class="text-slate-400 group-open:rotate-45 transition-transform text-xl">+</span>
  </summary>
  <div class="mt-3 text-slate-700 dark:text-slate-300 text-sm leading-relaxed">{answer}</div>
</details>
