---
import type { Service } from "../../lib/api/types";
import ServiceCard from "../ui/ServiceCard.astro";

interface Props {
  title: string;
  description: string;
  services: Service[];
  whatsappNumber: string;
}

const { title, description, services, whatsappNumber } = Astro.props as Props;
const sortedServices = [...services].sort(
  (a, b) => (a.order ?? 99) - (b.order ?? 99),
);
---

<section id="servicios" class="py-20 lg:py-32">
  <div class="section-shell">
    <div class="mx-auto mb-16 max-w-3xl text-center" data-reveal="fade-up">
      <p
        class="inline-flex items-center rounded-full border border-accent/30 bg-accent/10 px-4 py-2 text-xs font-semibold uppercase tracking-[0.24em] text-accent"
      >
        Servicios de desarrollo
      </p>
      <h2 class="mt-4 text-3xl font-semibold text-content sm:text-4xl">
        {title}
      </h2>
      <p class="mt-4 text-lg text-muted">
        {description}
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {sortedServices.map((service, index) => (
        <div data-reveal="fade-up" data-delay={String(index * 80)}>
          <ServiceCard service={service} whatsappNumber={whatsappNumber} />
        </div>
      ))}
    </div>
  </div>
</section>
