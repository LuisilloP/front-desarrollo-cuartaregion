---
import type { ValueSection as ValueSectionContent } from "../../../lib/api/types";
import GoogleG from "../../ui/GoogleG.astro";

interface Props extends ValueSectionContent {
  sectionId?: string;
}

const {
  eyebrow = "Propuesta de valor",
  title,
  description,
  quote,
  ctaLabel,
  ctaHref,
  ctaNote,
  ctaSecondaryLabel,
  ctaSecondaryHref,
  diagnosisTitle,
  diagnosisDescription,
  diagnosisNote,
  items,
  sectionId = "propuesta",
} = Astro.props as Props;

const usePremium =
  Boolean(ctaLabel) ||
  items.some((item) => item.label);

const isExternalCta = Boolean(ctaHref?.startsWith("http"));
---

<section id={sectionId} class="relative py-20 lg:py-28 overflow-visible">
  {usePremium ? (
    <>
      <div class="pointer-events-none absolute inset-y-0 right-0 -z-10 hidden w-1/2 lg:block overflow-visible">
        <div class="absolute inset-0 bg-gradient-to-br from-primary/10 via-transparent to-transparent"></div>
      </div>

      <div class="section-shell grid gap-12 overflow-visible lg:grid-cols-[1.05fr_0.95fr] lg:items-start">
        <div class="space-y-4 sm:space-y-5" data-reveal="fade-up">
          <p
            class="inline-flex items-center rounded-full border border-primary/20 bg-primary/5 px-4 py-2 text-xs font-semibold uppercase tracking-[0.24em] text-primary/80"
          >
            {eyebrow}
          </p>
          <h2 class="text-3xl font-semibold leading-tight text-content sm:text-4xl">
            {title}
          </h2>
          <p class="mt-3 max-w-prose text-base leading-relaxed text-muted sm:max-w-[46ch] sm:text-lg md:max-w-prose">
            {description}
          </p>

          {ctaLabel && ctaHref ? (
            <div class="mt-5 space-y-2 sm:mt-6">
              <a
                href={ctaHref}
                target={isExternalCta ? "_blank" : undefined}
                rel={isExternalCta ? "noreferrer" : undefined}
                class="inline-flex w-full min-w-[240px] items-center justify-center gap-2 rounded-full bg-primary px-7 py-3 text-sm font-semibold text-contrast shadow-sm shadow-primary/20 transition-all duration-200 hover:-translate-y-0.5 hover:shadow-md focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-highlight/30 sm:w-auto sm:min-w-[260px]"
              >
                <GoogleG size={16} />
                <span>{ctaLabel}</span>
              </a>
              {ctaNote ? (
                <p class="max-w-[52ch] text-sm leading-snug text-muted">
                  {ctaNote}
                </p>
              ) : null}
              {ctaSecondaryLabel && ctaSecondaryHref ? (
                <a
                  href={ctaSecondaryHref}
                  class="inline-flex items-center gap-2 text-sm font-medium text-muted transition hover:text-content focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-highlight/30"
                >
                  {ctaSecondaryLabel}
                </a>
              ) : null}
            </div>
          ) : null}
        </div>

        <div class="mt-6 space-y-4 sm:mt-0 sm:space-y-6" data-reveal="fade-up" data-delay="120">
          <div class="grid gap-4 sm:gap-6">
            {items.map((item) => {
              const isHighlighted = item.label?.toLowerCase().includes("con m√©todo");
              return (
                <article
                  class:list={[
                    "group rounded-2xl border bg-card/90 p-5 shadow-sm transition-all duration-300 hover:-translate-y-0.5 sm:p-6",
                    isHighlighted
                      ? "border-primary/20 ring-1 ring-primary/10 bg-gradient-to-b from-primary/5 to-transparent hover:border-primary/30 hover:shadow-md sm:ring-primary/15"
                      : "border-border/70 hover:border-border/90 hover:shadow-md",
                  ]}
                >
                {item.label && (
                  <p class="text-xs font-semibold uppercase tracking-[0.2em] text-muted">
                    {item.label}
                  </p>
                )}
                <h3 class="mt-3 text-lg font-semibold text-content">
                  {item.title}
                </h3>
                <p class="mt-2 text-sm text-muted">
                  {item.description}
                </p>
                <ul class="mt-4 space-y-2 text-sm text-muted">
                  {item.bullets.map((bullet) => (
                    <li class="flex items-start gap-2">
                      <span class="mt-1 h-2 w-2 flex-shrink-0 rounded-full bg-accent"></span>
                      <span>{bullet}</span>
                    </li>
                  ))}
                </ul>
                </article>
              );
            })}
          </div>

        </div>
      </div>
    </>
  ) : (
    <div class="section-shell grid gap-12 overflow-visible lg:grid-cols-2 lg:items-start">
      <div class="space-y-6" data-reveal="fade-up">
        <p
          class="inline-flex items-center rounded-full border border-primary/30 bg-primary/10 px-4 py-2 text-xs font-semibold uppercase tracking-[0.24em] text-primary"
        >
          {eyebrow}
        </p>
        <h2 class="text-3xl font-semibold text-content sm:text-4xl">
          {title}
        </h2>
        <p class="text-lg text-muted">
          {description}
        </p>
        {quote ? (
          <blockquote class="rounded-2xl border border-border bg-surface-strong/70 p-5 text-base italic text-muted">
            "{quote}"
          </blockquote>
        ) : null}
      </div>

      <div class="grid gap-6" data-reveal="fade-up" data-delay="120">
        {items.map((item) => (
          <article class="card space-y-4">
            <div>
              <p class="text-xs font-semibold uppercase tracking-[0.2em] text-muted">
                {item.title}
              </p>
              <p class="mt-2 text-base font-semibold text-content">
                {item.description}
              </p>
            </div>
            <ul class="space-y-2 text-sm text-muted">
              {item.bullets.map((bullet) => (
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-2 w-2 flex-shrink-0 rounded-full bg-accent"></span>
                  <span>{bullet}</span>
                </li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </div>
  )}
</section>
