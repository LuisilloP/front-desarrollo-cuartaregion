---
import PromoCard from "./PromoCard.astro";
import type {
  AccentKey,
  Intensity,
  Size,
  Tone,
  Variant,
} from "./config/promo.types";

interface Props {
  badgeText?: string;
  badgeIcon?: string;
  title?: string;
  description?: string;
  href?: string;
  hintText?: string;
  size?: Size;
  ariaLabel?: string;
  bgImage?: string;
  class?: string;
  tone?: Tone;
  intensity?: Intensity;
  accentKey?: AccentKey;
  watermarkIcon?: string;
  arrowIcon?: string;
}

const {
  badgeText = "META ADS",
  badgeIcon = "simple-icons:meta",
  title = "Campanas que traen clientes",
  description = "Segmentacion, tracking y optimizacion continua.",
  href = "#planes-marketing",
  hintText = "Ver planes",
  size = "tile",
  ariaLabel = "Ir a planes marketing",
  bgImage,
  class: className = "",
  tone = "vivid",
  intensity = "md",
  accentKey = "auto",
  watermarkIcon = "lucide:target",
  arrowIcon,
} = Astro.props as Props;

const variant: Variant = "marketing";
---

<PromoCard
  badgeText={badgeText}
  badgeIcon={badgeIcon}
  title={title}
  description={description}
  href={href}
  hintText={hintText}
  size={size}
  ariaLabel={ariaLabel}
  bgImage={bgImage}
  variant={variant}
  class={className}
  tone={tone}
  intensity={intensity}
  accentKey={accentKey}
  watermarkIcon={watermarkIcon}
  arrowIcon={arrowIcon}
/>

