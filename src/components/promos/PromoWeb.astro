---
import PromoCard from "./PromoCard.astro";
import type { Accent, Intensity, Size, Tone } from "./config/promo.types";

interface Props {
  title?: string;
  description?: string;
  href?: string;
  hintText?: string;
  size?: Size;
  ariaLabel?: string;
  bgImage?: string;
  class?: string;
  tone?: Tone;
  intensity?: Intensity;
  accent?: Accent;
  watermarkIcon?: string;
  arrowIcon?: string;
}

const {
  title = "Web rapida y lista para vender",
  description = "SEO tecnico, performance y estructura solida.",
  href = "#planes-web",
  hintText = "Ver planes",
  size = "tile",
  ariaLabel = "Ir a planes web",
  bgImage,
  class: className = "",
  tone = "vivid",
  intensity = "md",
  accent = "auto",
  watermarkIcon,
  arrowIcon,
} = Astro.props as Props;
---

<PromoCard
  badgeText="DESARROLLO WEB"
  title={title}
  description={description}
  href={href}
  hintText={hintText}
  size={size}
  ariaLabel={ariaLabel}
  bgImage={bgImage}
  variant="web"
  class={className}
  tone={tone}
  intensity={intensity}
  accent={accent}
  watermarkIcon={watermarkIcon}
  arrowIcon={arrowIcon}
/>

