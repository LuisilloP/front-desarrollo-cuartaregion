---
import { Icon } from "astro-icon/components";
import type { UseCasesSectionContent } from "../lib/api/types";

interface Props {
  content: UseCasesSectionContent;
}

const { content } = Astro.props;
---

<section id="use-cases" class="py-20 lg:py-32">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <div class="mb-4 inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-medium
      bg-amber-500/10 text-amber-600
      dark:bg-amber-400/10 dark:text-amber-300">
        <Icon name="lucide:layout-grid" class="h-4 w-4" />
        {content.eyebrow}
      </div>
      <h2 class="text-4xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-5xl">
        {content.title}
      </h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-white/60">
        {content.description}
      </p>
    </div>

    <!-- Use Cases Grid -->
    <div id="use-cases-grid" class="grid grid-cols-1 gap-8 md:grid-cols-2">
      {content.cases.map((useCase) => (
        <div class="use-case-card-wrapper h-full">
          <div class="card-shine group relative flex h-full flex-col rounded-3xl border p-8 backdrop-blur-xl transition-all duration-300
          border-slate-900/10 bg-white/40 hover:border-slate-900/20 hover:!bg-white/60
          dark:border-white/10 dark:bg-white/5 dark:hover:border-white/20 dark:hover:!bg-white/[0.07]">
            
            <div class="relative mb-6 flex h-12 w-12 items-center justify-center rounded-2xl border
            bg-amber-500/10 text-amber-600 border-amber-500/20
            dark:bg-amber-400/10 dark:text-amber-300 dark:border-amber-400/20">
              <Icon name={useCase.icon} class="h-6 w-6" />
            </div>

            <h3 class="text-xl font-semibold leading-snug tracking-tight text-slate-900 dark:text-white">{useCase.title}</h3>
            <p class="mt-2 text-slate-600 dark:text-white/60">{useCase.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .use-case-card-wrapper {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transition-delay: var(--delay, 0s);
  }
  .use-case-card-wrapper.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Card shine effect (re-scoped here to avoid conflicts if scripts get bundled) */
  .card-shine {
    overflow: hidden;
  }
  .card-shine::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      400px circle at var(--mouse-x, -9999px) var(--mouse-y, -9999px),
      var(--shine-color, rgba(100, 116, 139, 0.1)),
      transparent 40%
    );
    border-radius: inherit;
    z-index: 0;
    transition: opacity 0.3s;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Staggered Animation
    const grid = document.getElementById('use-cases-grid');
    if (grid) {
      const cards = grid.querySelectorAll('.use-case-card-wrapper');
      const observer = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            cards.forEach((card, index) => {
              const cardElement = card as HTMLElement;
              cardElement.style.setProperty('--delay', `${index * 100}ms`);
              cardElement.classList.add('is-visible');
            });
            obs.unobserve(grid);
          }
        });
      }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });
      observer.observe(grid);
    }

    // Card Shine Effect
    function setupCardShine() {
      document.querySelectorAll('#use-cases-grid .card-shine').forEach(card => {
        if (card.dataset.shineListener === 'true') return;
        card.addEventListener('mousemove', (e) => {
          const rect = card.getBoundingClientRect();
          const x = e.clientX - rect.left;
          const y = e.clientY - rect.top;
          (card as HTMLElement).style.setProperty('--mouse-x', `${x}px`);
          (card as HTMLElement).style.setProperty('--mouse-y', `${y}px`);
        });
        (card as HTMLElement).dataset.shineListener = 'true';
      });
    }
    setupCardShine();
    document.addEventListener('astro:after-swap', setupCardShine);
  });
</script>
