---
import type { SiteSettings } from "../data/mock";

interface Props {
  siteSettings: SiteSettings;
}

const { siteSettings } = Astro.props;
---

<footer class="border-t border-border bg-surface/90 mt-10">
  <div class="section-shell py-10 grid md:grid-cols-3 gap-8 text-sm text-muted">
    <div class="space-y-2">
      <p class="text-lg font-semibold text-content">{siteSettings.siteName}</p>
      <p class="text-muted/80">{siteSettings.footerText}</p>
    </div>
    <div>
      <p class="text-content font-semibold mb-3">Sitio</p>
      <ul class="space-y-2">
        <li><a class="hover:text-content" href="#servicios">Servicios</a></li>
        <li><a class="hover:text-content" href="#casos">Casos</a></li>
        <li><a class="hover:text-content" href="#contacto">Contacto</a></li>
        <li><a class="hover:text-content" href="#faq">FAQ</a></li>
      </ul>
    </div>
    <div>
      <p class="text-content font-semibold mb-3">Legal y redes</p>
      <ul class="space-y-2">
        <li><a class="hover:text-content" href="/privacidad">Privacidad</a></li>
        <li><a class="hover:text-content" href="/terminos">Terminos</a></li>
        {siteSettings.socialLinks?.map((link) => (
          <li><a class="hover:text-content" href={link.url} target="_blank" rel="noreferrer">{link.label}</a></li>
        ))}
      </ul>
    </div>
  </div>
  <div class="section-shell pb-8 text-xs text-muted/80">(c) {new Date().getFullYear()} {siteSettings.siteName}. Todos los derechos reservados.</div>
</footer>
