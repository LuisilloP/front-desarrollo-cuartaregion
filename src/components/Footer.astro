---
import type { SiteSettings } from "../data/mock";

interface Props {
  siteSettings: SiteSettings;
}

const { siteSettings } = Astro.props;
---

<footer class="border-t border-slate-200 bg-white/90 dark:border-slate-800 dark:bg-slate-950/70 mt-10">
  <div class="section-shell py-10 grid md:grid-cols-3 gap-8 text-sm text-slate-700 dark:text-slate-300">
    <div class="space-y-2">
      <p class="text-lg font-semibold text-slate-900 dark:text-white">{siteSettings.siteName}</p>
      <p class="text-slate-500 dark:text-slate-400">{siteSettings.footerText}</p>
    </div>
    <div>
      <p class="text-slate-900 dark:text-white font-semibold mb-3">Sitio</p>
      <ul class="space-y-2">
        <li><a class="hover:text-slate-900 dark:hover:text-white" href="#servicios">Servicios</a></li>
        <li><a class="hover:text-slate-900 dark:hover:text-white" href="#casos">Casos</a></li>
        <li><a class="hover:text-slate-900 dark:hover:text-white" href="#contacto">Contacto</a></li>
        <li><a class="hover:text-slate-900 dark:hover:text-white" href="#faq">FAQ</a></li>
      </ul>
    </div>
    <div>
      <p class="text-slate-900 dark:text-white font-semibold mb-3">Legal y redes</p>
      <ul class="space-y-2">
        <li><a class="hover:text-slate-900 dark:hover:text-white" href="/privacidad">Privacidad</a></li>
        <li><a class="hover:text-slate-900 dark:hover:text-white" href="/terminos">Términos</a></li>
        {siteSettings.socialLinks?.map((link) => (
          <li><a class="hover:text-slate-900 dark:hover:text-white" href={link.url} target="_blank" rel="noreferrer">{link.label}</a></li>
        ))}
      </ul>
    </div>
  </div>
  <div class="section-shell pb-8 text-xs text-slate-500 dark:text-slate-500">© {new Date().getFullYear()} {siteSettings.siteName}. Todos los derechos reservados.</div>
</footer>
