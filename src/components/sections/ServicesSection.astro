---
import type { Service } from "../../lib/api/types";
import ServiceCard from "../ui/ServiceCard.astro";

interface Props {
  services: Service[];
  whatsappNumber: string;
  singleGrid?: boolean;
}

const { services, whatsappNumber, singleGrid = false } = Astro.props as Props;
const sortedServices = [...services].sort(
  (a, b) => (a.order ?? 99) - (b.order ?? 99),
);
const webServices = sortedServices.filter(
  (service) => (service.variant ?? "web") === "web",
);
const marketingServices = sortedServices.filter(
  (service) => service.variant === "marketing",
);
const mixedServices = sortedServices.filter(
  (service) => service.variant === "mixed",
);
---

<section id="servicios" class="py-20 lg:py-32">
  <div class="container mx-auto px-6 sm:px-8">
    <!-- Section Header -->
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <h2
        class="text-4xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-5xl"
      >
        Planes
      </h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-white/60">
        Cada servicio está pensado para lograr resultados claros y medibles.
        Revisa nuestras opciones y contáctanos para una cotización en menos de
        24 horas hábiles.
      </p>
    </div>

    <!-- Services Grid -->
    {
      singleGrid ? (
        <div class="services-grid grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
          {sortedServices.map((service) => (
            <div class="service-card-wrapper">
              <ServiceCard
                service={service}
                whatsappNumber={whatsappNumber}
                maxBenefits={service.slug === "planes-mixto" ? 5 : 4}
              />
            </div>
          ))}
        </div>
      ) : (
        <div class="services-grid grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
          {webServices.map((service) => (
            <div class="service-card-wrapper">
              <ServiceCard
                service={service}
                whatsappNumber={whatsappNumber}
              />
            </div>
          ))}
        </div>
      )
    }

    {
      !singleGrid && marketingServices.length > 0 && (
        <>
          <div class="mx-auto mt-16 mb-10 max-w-3xl text-center">
            <h3 class="text-3xl font-semibold tracking-tight text-slate-900 dark:text-white sm:text-4xl">
              Marketing
            </h3>
            <p class="mt-3 text-base text-slate-600 dark:text-white/60">
              Campañas y contenidos para atraer clientes de forma constante.
            </p>
          </div>
          <div class="services-grid grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
            {marketingServices.map((service) => (
              <div class="service-card-wrapper">
                <ServiceCard
                  service={service}
                  whatsappNumber={whatsappNumber}
                />
              </div>
            ))}
          </div>
        </>
      )
    }

    {
      !singleGrid && mixedServices.length > 0 && (
        <>
          <div class="mx-auto mt-16 mb-10 max-w-3xl text-center">
            <h3 class="text-3xl font-semibold tracking-tight text-slate-900 dark:text-white sm:text-4xl">
              Mixta (Web + Marketing)
            </h3>
            <p class="mt-3 text-base text-slate-600 dark:text-white/60">
              Una sola propuesta para lanzar tu web y activar campañas.
            </p>
          </div>
          <div class="services-grid grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
            {mixedServices.map((service) => (
              <div class="service-card-wrapper">
                <ServiceCard
                  service={service}
                  whatsappNumber={whatsappNumber}
                />
              </div>
            ))}
          </div>
        </>
      )
    }
  </div>
</section>

<style>
  .service-card-wrapper {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94),
      transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transition-delay: var(--delay, 0s);
  }
  .service-card-wrapper.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const grids = document.querySelectorAll(".services-grid");
    if (!grids.length) return;

    grids.forEach((grid) => {
      const cards = grid.querySelectorAll(".service-card-wrapper");
      if (!cards.length) return;

      const observer = new IntersectionObserver(
        (entries, obs) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              cards.forEach((card, index) => {
                const cardElement = card as HTMLElement;
                cardElement.style.setProperty("--delay", `${index * 100}ms`);
                cardElement.classList.add("is-visible");
              });
              obs.unobserve(grid); // Stop observing after animation is triggered
            }
          });
        },
        {
          threshold: 0.1, // Trigger when 10% of the grid is visible
          rootMargin: "0px 0px -50px 0px", // Trigger a bit before it's fully in view
        },
      );

      observer.observe(grid);
    });
  });
</script>
