---
import type { Faq, FaqSectionContent } from "../../lib/api/types";
import AccordionItem from "../ui/AccordionItem.astro";
import { Icon } from "astro-icon/components";

interface Props {
  content: FaqSectionContent;
  faqs: Faq[];
}

const { content, faqs } = Astro.props;
const sortedFaqs = [...faqs].sort((a, b) => (a.order ?? 99) - (b.order ?? 99));
---

<section id="faq" class="py-20 lg:py-32">
  <div id="faq-content" class="container mx-auto px-6 sm:px-8">
    <!-- Section Header -->
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <div
        class="mb-4 inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-medium
      bg-blue-500/10 text-blue-600
      dark:bg-blue-400/10 dark:text-blue-300"
      >
        <Icon name="lucide:help-circle" class="h-4 w-4" />
        {content.eyebrow}
      </div>
      <h2
        class="text-4xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-5xl"
      >
        {content.title}
      </h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-white/60">
        {content.description}
      </p>
    </div>

    <!-- FAQ Accordion -->
    <div class="mx-auto max-w-3xl space-y-4">
      {
        sortedFaqs.map((faq, index) => (
          <AccordionItem
            question={faq.question}
            answer={faq.answer}
            defaultOpen={index === 0}
          />
        ))
      }
    </div>
  </div>
</section>

<style>
  #faq-content {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94),
      transform 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  #faq-content.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const faqSection = document.getElementById("faq-content");
    if (!faqSection) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            faqSection.classList.add("is-visible");
            observer.unobserve(faqSection);
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px",
      },
    );

    observer.observe(faqSection);
  });
</script>
