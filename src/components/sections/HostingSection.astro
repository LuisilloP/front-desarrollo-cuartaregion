---
import { Icon } from "astro-icon/components";
import type { UseCasesSectionContent } from "../../lib/api/types";

interface Props {
  content: UseCasesSectionContent;
}

const { content } = Astro.props;
---

<section id="use-cases" class="py-20 lg:py-32">
  <div class="container mx-auto px-6 sm:px-8">
    <!-- Section Header -->
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <h2 class="text-4xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-5xl">
        {content.title}
      </h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-white/60">
        {content.description}
      </p>
    </div>

    <!-- Use Cases Grid -->
    <div
      id="use-cases-grid"
      class="grid grid-cols-1 items-stretch gap-8 lg:grid-cols-3"
    >
      {content.cases.map((useCase, index) => {
        const accentClasses = ["accent-blue", "accent-amber", "accent-purple"];
        const accentClass = accentClasses[index] ?? "accent-purple";

        const cardStyle = useCase.cardColor
          ? `--accent-color: ${useCase.cardColor};`
          : undefined;

        const backgroundImage =
          useCase.backgroundImage || "/images/sections/why-us-bg.png";

        return (
          <div class="use-case-card-wrapper h-full">
            <div
              class={`card-shine ${accentClass} group relative flex h-full flex-col rounded-3xl border p-8 backdrop-blur-xl transition-all duration-300 overflow-hidden
              border-slate-600/80 bg-slate-50/90 hover:border-slate-800 hover:bg-white
              dark:border-white/10 dark:bg-slate-950/80 dark:hover:border-white/20 dark:hover:bg-slate-950/85`}
              style={cardStyle}
            >
              <!-- Background image -->
              <div
                class="absolute inset-0 bg-cover bg-center opacity-15 scale-105 -z-10"
                style={`background-image: url('${backgroundImage}')`}
                aria-hidden="true"
              ></div>

              <!-- Gradient tint -->
              <div class="use-case-tint absolute inset-0 -z-10"></div>

              <!-- Content -->
              <div class="relative z-10 flex h-full flex-col">
                <div>
                  <!-- Large Number -->
                  <div class="mb-6 text-6xl font-bold select-none font-mono text-slate-900/80 dark:text-white/10">
                    0{index + 1}
                  </div>

                  <h3 class="text-xl font-bold leading-snug tracking-tight text-slate-900 mb-3 dark:text-white">
                    {useCase.title}
                  </h3>

                  <p class="text-slate-900 line-clamp-3 mb-6 dark:text-white/70">
                    {useCase.description}
                  </p>
                </div>

                {useCase.bullets && useCase.bullets.length > 0 && (
                  <ul class="mt-auto space-y-3 border-t border-slate-600/70 pt-6 dark:border-white/10">
                    {useCase.bullets.map((bullet) => (
                      <li class="flex items-start gap-3 text-sm text-slate-900 dark:text-white/70">
                        <Icon
                          name="lucide:check"
                          class="use-case-check mt-0.5 h-4 w-4 shrink-0"
                        />
                        <span>{bullet}</span>
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>

<style>
  .use-case-card-wrapper {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transition-delay: var(--delay, 0s);
  }
  .use-case-card-wrapper.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Card shine effect (re-scoped here to avoid conflicts if scripts get bundled) */
  .card-shine {
    overflow: hidden;
    --accent-color: rgb(100 116 139); /* slate-500 fallback */
  }
  .card-shine::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      400px circle at var(--mouse-x, -9999px) var(--mouse-y, -9999px),
      var(--shine-color, rgba(100, 116, 139, 0.1)),
      transparent 40%
    );
    border-radius: inherit;
    z-index: 0;
    transition: opacity 0.3s;
  }

  /* Accent variants: 01 blue, 02 orange, 03 purple */
  .accent-blue {
    --accent-color: rgb(56 189 248);
    --shine-color: rgba(56, 189, 248, 0.12);
  }
  .accent-amber {
    --accent-color: rgb(251 146 60);
    --shine-color: rgba(251, 146, 60, 0.14);
  }
  .accent-purple {
    --accent-color: rgb(168 85 247);
    --shine-color: rgba(168, 85, 247, 0.14);
  }
  .use-case-tint {
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--accent-color) 18%, transparent),
      rgba(15, 23, 42, 0.14),
      color-mix(in srgb, var(--accent-color) 10%, transparent)
    );
  }
  .dark .use-case-tint {
    background: linear-gradient(
      135deg,
      rgba(2, 6, 23, 0.4),
      rgba(2, 6, 23, 0.09),
      rgba(2, 6, 23, 0.3)
    );
  }
  .use-case-check {
    color: var(--accent-color, rgba(100, 116, 139, 0.3));
  }
  .dark .use-case-check {
    color: var(--accent-color, rgba(100, 116, 139, 0.4));
  }

  @supports (color: color-mix(in srgb, white, black)) {
    .card-shine {
      --shine-color: color-mix(in srgb, var(--accent-color) 20%, transparent);
    }
    .use-case-tint {
      background: linear-gradient(
        135deg,
        color-mix(in srgb, var(--accent-color) 18%, transparent),
        rgba(2, 6, 23, 0.3),
        color-mix(in srgb, var(--accent-color) 10%, transparent)
      );
    }
    .dark .use-case-tint {
      background: linear-gradient(
        135deg,
        color-mix(in srgb, var(--accent-color) 18%, transparent),
        rgba(2, 6, 23, 0.3),
        color-mix(in srgb, var(--accent-color) 10%, transparent)
      );
    }
    .use-case-check {
      color: color-mix(in srgb, var(--accent-color) 90%, transparent);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Staggered Animation
    const grid = document.getElementById('use-cases-grid');
    if (grid) {
      const cards = grid.querySelectorAll('.use-case-card-wrapper');
      const observer = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            cards.forEach((card, index) => {
              const cardElement = card as HTMLElement;
              cardElement.style.setProperty('--delay', `${index * 100}ms`);
              cardElement.classList.add('is-visible');
            });
            obs.unobserve(grid);
          }
        });
      }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });
      observer.observe(grid);
    }

    // Card Shine Effect
    function setupCardShine() {
      document.querySelectorAll('#use-cases-grid .card-shine').forEach(card => {
        const htmlCard = card as HTMLElement;
        if (htmlCard.dataset.shineListener === 'true') return;
        
        htmlCard.addEventListener('mousemove', (e) => {
          const mouseEvent = e as MouseEvent;
          const rect = htmlCard.getBoundingClientRect();
          const x = mouseEvent.clientX - rect.left;
          const y = mouseEvent.clientY - rect.top;
          htmlCard.style.setProperty('--mouse-x', `${x}px`);
          htmlCard.style.setProperty('--mouse-y', `${y}px`);
        });
        htmlCard.dataset.shineListener = 'true';
      });
    }
    setupCardShine();
    document.addEventListener('astro:after-swap', setupCardShine);
  });
</script>
