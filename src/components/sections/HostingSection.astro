---
import { Icon } from "astro-icon/components";
import type { UseCasesSectionContent } from "../../lib/api/types";

interface Props {
  content: UseCasesSectionContent;
}

const { content } = Astro.props;
---

<section id="use-cases" class="py-20 lg:py-32">
  <div class="container mx-auto px-6 sm:px-8">
    <!-- Section Header -->
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <div class="mb-4 inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-medium
      bg-amber-500/10 text-amber-600
      dark:bg-amber-400/10 dark:text-amber-300">
        <Icon name="lucide:layout-grid" class="h-4 w-4" />
        {content.eyebrow}
      </div>
      <h2 class="text-4xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-5xl">
        {content.title}
      </h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-white/60">
        {content.description}
      </p>
    </div>

    <!-- Reasons Grid -->
    <div id="use-cases-grid" class="grid grid-cols-1 gap-8 lg:grid-cols-3">
      {content.cases.map((useCase, index) => (
        <div class="use-case-card-wrapper h-full">
          <div class="card-shine group relative flex h-full flex-col rounded-3xl border p-8 backdrop-blur-xl transition-all duration-300 overflow-hidden
          border-slate-900/10 bg-white/40 hover:border-slate-900/20 hover:!bg-white/60
          dark:border-white/10 dark:bg-white/5 dark:hover:border-white/20 dark:hover:!bg-white/[0.07]">
            
            {/* Background image for this card */}
            <div 
              class="absolute inset-0 bg-[url('/images/sections/why-us-bg.png')] bg-cover bg-center opacity-15 scale-105 -z-10"
              aria-hidden="true"
            ></div>

            {/* Overlay for readability - lighter in light mode, darker in dark mode */}
            <div class="absolute inset-0 bg-gradient-to-br from-white/50 via-white/40 to-white/60 dark:from-slate-950/30 dark:via-slate-950/20 dark:to-slate-950/40 -z-10"></div>

            {/* Content */}
            <div class="relative z-10">
              <!-- Large Number -->
              <div class="mb-6 text-6xl font-bold text-slate-900/5 dark:text-white/5 select-none font-mono">
                0{index + 1}
              </div>

              <h3 class="text-xl font-bold leading-snug tracking-tight text-slate-900 dark:text-white mb-3">
                {useCase.title}
              </h3>
              
              <p class="text-slate-600 dark:text-white/60 line-clamp-3 mb-6">
                {useCase.description}
              </p>

              {useCase.bullets && useCase.bullets.length > 0 && (
                <ul class="mt-auto space-y-3 border-t border-slate-200/50 pt-6 dark:border-white/5">
                  {useCase.bullets.map((bullet) => (
                    <li class="flex items-start gap-3 text-sm text-slate-600 dark:text-white/70">
                      <Icon name="lucide:check" class="mt-0.5 h-4 w-4 shrink-0 text-amber-500/80" />
                      <span>{bullet}</span>
                    </li>
                  ))}
                </ul>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Closing Text -->
    {content.closingText && (
      <div class="mt-16 text-center">
        <p class="mx-auto max-w-2xl text-lg font-medium text-slate-500 dark:text-white/40">
          {content.closingText}
        </p>
      </div>
    )}
  </div>
</section>

<style>
  .use-case-card-wrapper {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transition-delay: var(--delay, 0s);
  }
  .use-case-card-wrapper.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Card shine effect (re-scoped here to avoid conflicts if scripts get bundled) */
  .card-shine {
    overflow: hidden;
  }
  .card-shine::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      400px circle at var(--mouse-x, -9999px) var(--mouse-y, -9999px),
      var(--shine-color, rgba(100, 116, 139, 0.1)),
      transparent 40%
    );
    border-radius: inherit;
    z-index: 0;
    transition: opacity 0.3s;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Staggered Animation
    const grid = document.getElementById('use-cases-grid');
    if (grid) {
      const cards = grid.querySelectorAll('.use-case-card-wrapper');
      const observer = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            cards.forEach((card, index) => {
              const cardElement = card as HTMLElement;
              cardElement.style.setProperty('--delay', `${index * 100}ms`);
              cardElement.classList.add('is-visible');
            });
            obs.unobserve(grid);
          }
        });
      }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });
      observer.observe(grid);
    }

    // Card Shine Effect
    function setupCardShine() {
      document.querySelectorAll('#use-cases-grid .card-shine').forEach(card => {
        const htmlCard = card as HTMLElement;
        if (htmlCard.dataset.shineListener === 'true') return;
        
        htmlCard.addEventListener('mousemove', (e) => {
          const mouseEvent = e as MouseEvent;
          const rect = htmlCard.getBoundingClientRect();
          const x = mouseEvent.clientX - rect.left;
          const y = mouseEvent.clientY - rect.top;
          htmlCard.style.setProperty('--mouse-x', `${x}px`);
          htmlCard.style.setProperty('--mouse-y', `${y}px`);
        });
        htmlCard.dataset.shineListener = 'true';
      });
    }
    setupCardShine();
    document.addEventListener('astro:after-swap', setupCardShine);
  });
</script>
