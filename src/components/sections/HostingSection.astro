<!-- DEVELOPER_NOTE: This component is about "Use Cases". For clarity, it would be best to rename this file to "UseCasesSection.astro" and update the import in the parent page. -->
---
import { Icon } from "astro-icon/components";
import type { UseCasesSectionContent } from "../../lib/api/types";

interface Props {
  content: UseCasesSectionContent;
}

const { content } = Astro.props as Props;
---

<section id="use-cases" class="py-20 lg:py-32">
  <div class="container mx-auto px-6 sm:px-8">

    <!-- Header -->
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <h2 class="text-4xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-5xl">
        {content.title}
      </h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-white/60">
        {content.description}
      </p>
    </div>

    <!-- Grid -->
    <div id="use-cases-grid" class="grid gap-8 lg:grid-cols-3">

      {content.cases.map((useCase, index) => {
        const accents = ["accent-blue", "accent-amber", "accent-purple"];
        const accentClass = accents[index] ?? "accent-purple";

        const cardStyle = useCase.cardColor
          ? { "--accent": useCase.cardColor }
          : undefined;

        const backgroundImage =
          useCase.backgroundImage || "/images/sections/why-us-bg.png";

        return (
          <div class="use-case-wrapper">

            <div
              class={`use-case-card ${accentClass} group relative flex h-full flex-col rounded-3xl overflow-hidden isolate border p-8 backdrop-blur transition-all hover:-translate-y-1
                border-slate-300/70 bg-slate-50/90 shadow-md hover:shadow-lg
                dark:border-white/10 dark:bg-slate-950/80`}
              style={cardStyle}
            >

              <!-- Background image -->
              <div
                class="absolute inset-0 -z-10 bg-cover bg-center opacity-10 dark:opacity-25"
                style={`background-image:url('${backgroundImage}')`}
              />

              <!-- Gradient -->
              <div class="use-case-gradient"></div>

              <!-- Content -->
              <div class="relative z-10 flex h-full flex-col">

                <div>
                  <div class="mb-6 font-mono text-6xl font-bold text-slate-900/20 dark:text-white/10 select-none">
                    0{index + 1}
                  </div>

                  <h3 class="mb-3 text-xl font-bold text-slate-900 dark:text-white">
                    {useCase.title}
                  </h3>

                  <p class="mb-6 text-slate-600 dark:text-white/70">
                    {useCase.description}
                  </p>
                </div>

                {Array.isArray(useCase.bullets) && useCase.bullets.length > 0 && (
                  <ul class="mt-auto space-y-3 border-t border-slate-900/10 pt-6 dark:border-white/10">
                    {useCase.bullets.filter(Boolean).map((bullet) => (
                      <li class="flex items-start gap-3 text-sm text-slate-700 dark:text-white/70">
                        <Icon name="lucide:check" class="use-case-check mt-0.5 h-4 w-4 shrink-0" />
                        <span>{bullet}</span>
                      </li>
                    ))}
                  </ul>
                )}

              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>

<style>
:global(.use-case-wrapper){
  opacity:0;
  transform:translateY(30px);
  transition:.6s cubic-bezier(.25,.46,.45,.94);
}

:global(.use-case-wrapper.is-visible){
  opacity:1;
  transform:none;
}

/* card system */

:global(.use-case-card){
  position:relative;
  --accent:rgb(100 116 139);
  --accent-soft:color-mix(in srgb,var(--accent) 25%,transparent);
}

:global(.dark .use-case-card){
  --accent-soft:color-mix(in srgb,var(--accent) 40%,transparent);
}

/* gradient */

:global(.use-case-gradient){
  position:absolute;
  inset:0;
  background:linear-gradient(135deg,var(--accent-soft),transparent 60%);
  pointer-events:none;
}

/* shine */

:global(.use-case-card)::before{
  content:"";
  position:absolute;
  inset:0;
  background:radial-gradient(300px circle at var(--mouse-x,50%) var(--mouse-y,50%),var(--accent-soft),transparent 70%);
  opacity:.8;
}

/* icons */

:global(.use-case-check){
  color:var(--accent);
}

/* accents */

:global(.accent-blue){--accent:rgb(14, 133, 34)}
:global(.accent-amber){--accent:rgb(251 146 60)}
:global(.accent-purple){--accent:rgb(168 85 247)}
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {

  const grid = document.getElementById("use-cases-grid");

  if(grid){
    const cards = Array.from(grid.querySelectorAll<HTMLElement>(".use-case-wrapper"));

    const observer = new IntersectionObserver(entries=>{
      if(entries[0].isIntersecting){
        cards.forEach((c,i)=>{
          c.style.transitionDelay=`${i*100}ms`;
          c.classList.add("is-visible");
        });
        observer.disconnect();
      }
    },{threshold:.2});

    observer.observe(grid);
  }

  function setupShine(){
    document.querySelectorAll<HTMLElement>(".use-case-card").forEach(card=>{
      card.addEventListener("mousemove",(e: MouseEvent)=>{
        const r=card.getBoundingClientRect();
        card.style.setProperty("--mouse-x",`${e.clientX-r.left}px`);
        card.style.setProperty("--mouse-y",`${e.clientY-r.top}px`);
      });
    });
  }

  setupShine();
  document.addEventListener("astro:after-swap",setupShine);
});
</script>
