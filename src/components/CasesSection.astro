---
import type { CaseStudy } from "../lib/api/types";
import { Icon } from "astro-icon/components";
import CaseCard from "./CaseCard.astro";

interface Props {
  cases: CaseStudy[];
}

const { cases } = Astro.props;
const sortedCases = [...cases].sort((a, b) => (a.order ?? 99) - (b.order ?? 99));
---

<section id="casos" class="py-20 lg:py-32">
  <div class="container mx-auto px-6 sm:px-8">
    <!-- Section Header -->
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <div class="mb-4 inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-medium
      bg-purple-500/10 text-purple-600
      dark:bg-purple-400/10 dark:text-purple-300">
        <Icon name="lucide:bar-chart-3" class="h-4 w-4" />
        Casos de éxito
      </div>
      <h2 class="text-4xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-5xl">
        Resultados medibles con empresas locales
      </h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-white/60">
        Cada proyecto es una colaboración. Estos son algunos de los resultados que hemos construido junto a nuestros clientes.
      </p>
    </div>

    <!-- Cases Grid -->
    <div id="cases-grid" class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {sortedCases.map((caseItem) => (
        <div class="case-card-wrapper">
          <CaseCard caseItem={caseItem} />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .case-card-wrapper {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transition-delay: var(--delay, 0s);
  }
  .case-card-wrapper.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const grid = document.getElementById('cases-grid');
    if (!grid) return;

    const cards = grid.querySelectorAll('.case-card-wrapper');

    const observer = new IntersectionObserver((entries, obs) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          cards.forEach((card, index) => {
            const cardElement = card as HTMLElement;
            cardElement.style.setProperty('--delay', `${index * 100}ms`);
            cardElement.classList.add('is-visible');
          });
          obs.unobserve(grid);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });

    observer.observe(grid);
  });
</script>
