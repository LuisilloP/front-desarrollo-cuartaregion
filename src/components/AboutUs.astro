---
// src/components/AboutUs.astro

const headline = "Tecnología hecha en la Cuarta Región, para negocios reales.";

const story = `Somos un grupo de 3 jóvenes ingenieros informáticos de la Cuarta Región.
Al terminar de estudiar, nos surgió la idea de hacer crecer y actualizar la presencia de la región en Internet y motivar a la cuarta región a sumarse al avance tecnológico.
Nuestros primeros clientes fueron restaurantes, tiendas y pymes que necesitaba actualizar o imponer su marca en la Internet para que las personas empezaran a conocer y aumentaran la confianza en las tiendas y empresas locales que tiene la cuarta región.`;
---

<section id="nosotros" class="relative overflow-hidden py-16 lg:py-20">
    <!-- Parallax Background Container -->
    <div class="absolute inset-0 overflow-hidden -z-10">
        <!-- Background Image Layer (will parallax) -->
        <div
            data-parallax-bg
            class="absolute inset-0 bg-cover bg-center bg-no-repeat scale-110"
            style="background-image: url('/aboutus-bg.png'); will-change: transform;"
        >
        </div>

        <!-- Dark Overlay for text contrast -->
        <div
            class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black/70"
        >
        </div>

        <!-- Animated shapes (subtle) -->
        <div
            class="absolute -top-24 left-1/4 h-96 w-96 rounded-full bg-sky-500/5 blur-3xl"
        >
        </div>
        <div
            class="absolute -bottom-24 right-1/4 h-96 w-96 rounded-full bg-blue-500/5 blur-3xl"
        >
        </div>
    </div>

    <div class="container mx-auto px-6 sm:px-8 relative z-10">
        <div class="mx-auto max-w-4xl text-center">
            <!-- Badge -->
            <div
                class="mb-4 inline-flex items-center gap-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-2 text-sm font-medium text-white"
            >
                <svg
                    class="h-4 w-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                    ></path>
                </svg>
                Nosotros
            </div>

            <!-- Headline -->
            <h2
                class="mb-6 text-3xl font-bold tracking-tight text-white sm:text-4xl lg:text-5xl"
            >
                {headline}
            </h2>

            <!-- Story -->
            <p
                class="mx-auto max-w-3xl whitespace-pre-line text-base leading-relaxed text-white/90 sm:text-lg sm:leading-loose"
            >
                {story}
            </p>
        </div>
    </div>
</section>

<script>
    // Smooth parallax with RAF, lerp, and IntersectionObserver
    const setupParallax = () => {
        const section = document.getElementById("nosotros");
        const bgImage = section?.querySelector(
            "[data-parallax-bg]",
        ) as HTMLElement;

        if (!section || !bgImage) return;

        // Check for reduced motion preference
        const prefersReducedMotion = window.matchMedia(
            "(prefers-reduced-motion: reduce)",
        ).matches;
        if (prefersReducedMotion) {
            bgImage.style.transform = "scale(1.08)"; // Just scale, no parallax
            return;
        }

        // Parallax state
        let currentY = 0;
        let targetY = 0;
        let rafId: number | null = null;
        let isNearViewport = false;

        const INTENSITY = 300; // Parallax intensity in pixels (higher = more movement)
        const LERP_FACTOR = 0.08; // Smoothing factor (lower = smoother but slower)

        // Calculate target position based on scroll
        const calculateTargetPosition = () => {
            const rect = section.getBoundingClientRect();
            const viewH = window.innerHeight;

            // Only calculate if section is near viewport
            if (rect.top > viewH + 200 || rect.bottom < -200) {
                return;
            }

            // Progress from 0 (top of section entering bottom of viewport) to 1 (bottom of section leaving top of viewport)
            const progress = Math.max(
                0,
                Math.min(1, (viewH - rect.top) / (viewH + rect.height)),
            );

            // Convert to centered offset (-1 to 1, where 0 is middle)
            targetY = (progress - 0.5) * INTENSITY * 2;
        };

        // Animation loop with lerp
        const animate = () => {
            if (!isNearViewport) {
                rafId = null;
                return;
            }

            // Smooth transition using lerp
            currentY += (targetY - currentY) * LERP_FACTOR;

            // Apply transform
            bgImage.style.transform = `translate3d(0, ${currentY}px, 0) scale(1.08)`;

            // Continue loop
            rafId = requestAnimationFrame(animate);
        };

        // Scroll handler (passive, only recalculates target)
        const handleScroll = () => {
            calculateTargetPosition();

            // Start RAF loop if not running
            if (isNearViewport && rafId === null) {
                rafId = requestAnimationFrame(animate);
            }
        };

        // Intersection Observer to pause when not near viewport
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    isNearViewport = entry.isIntersecting;

                    if (isNearViewport) {
                        calculateTargetPosition();
                        if (rafId === null) {
                            rafId = requestAnimationFrame(animate);
                        }
                    } else {
                        if (rafId !== null) {
                            cancelAnimationFrame(rafId);
                            rafId = null;
                        }
                    }
                });
            },
            {
                rootMargin: "200px 0px", // Start 200px before entering viewport
                threshold: 0,
            },
        );

        observer.observe(section);

        // Scroll listener (passive)
        window.addEventListener("scroll", handleScroll, { passive: true });

        // Initial calculation
        handleScroll();
    };

    // Initialize
    if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", setupParallax);
    } else {
        setupParallax();
    }
</script>
