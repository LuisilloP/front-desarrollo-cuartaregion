---
import type { SiteSettings } from "../data/mock";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  siteSettings?: SiteSettings;
}

const { title, description, image, siteSettings } = Astro.props as Props;
const siteName = siteSettings?.siteName ?? "Agencia Digital";
const tagline = siteSettings?.tagline ?? "Webs y automatizaciones que venden";
const pageTitle = title ? `${title} | ${siteName}` : siteName;
const pageDescription = description ?? tagline;
const canonical = Astro.url ? Astro.url.toString() : undefined;
const ogImage = image ?? "/og-default.svg";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta name="generator" content="Astro" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    {canonical && <link rel="canonical" href={canonical} />}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" href="/favicon.svg" />
    <script is:inline>
      (() => {
        if (typeof window === "undefined") return;
        const stored = localStorage.getItem("theme");
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)",
        ).matches;
        const theme = stored || (prefersDark ? "dark" : "light");
        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
  </head>
  <body class="min-h-screen transition-colors overflow-x-hidden">
    <slot />

    <!-- Global Motion System -->
    <script>
      import "../scripts/motion.ts";
    </script>

    <style is:global>
      /* Motion System Base Styles */
      [data-reveal] {
        opacity: 0;
        transition-property: opacity, transform;
        transition-timing-function: cubic-bezier(0.22, 1, 0.36, 1);
        will-change: opacity, transform;
      }

      /* Duration variants */
      [data-reveal][data-duration="400"] {
        transition-duration: 400ms;
      }
      [data-reveal][data-duration="600"] {
        transition-duration: 600ms;
      }
      [data-reveal][data-duration="800"] {
        transition-duration: 800ms;
      }
      [data-reveal]:not([data-duration]) {
        transition-duration: 600ms;
      }

      /* Fade Up (default) */
      [data-reveal="fade-up"] {
        transform: translateY(1rem);
      }

      /* Fade */
      [data-reveal="fade"] {
        transform: none;
      }

      /* Zoom */
      [data-reveal="zoom"] {
        transform: scale(0.95);
      }

      /* Slide Left */
      [data-reveal="slide-left"] {
        transform: translateX(2rem);
      }

      /* Slide Right */
      [data-reveal="slide-right"] {
        transform: translateX(-2rem);
      }

      /* Visible State */
      [data-reveal].is-in {
        opacity: 1;
        transform: none;
      }

      /* Respect reduced motion */
      @media (prefers-reduced-motion: reduce) {
        [data-reveal] {
          opacity: 1 !important;
          transform: none !important;
          transition: none !important;
        }
      }

      /* Micro-interactions */
      .hover-lift {
        transition:
          transform 200ms cubic-bezier(0.22, 1, 0.36, 1),
          box-shadow 200ms cubic-bezier(0.22, 1, 0.36, 1);
      }

      .hover-lift:hover {
        transform: translateY(-2px);
      }
    </style>
  </body>
</html>
