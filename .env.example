# Strapi base URL (e.g. http://localhost:1337)
PUBLIC_STRAPI_URL=http://localhost:1337
PUBLIC_STRAPI_GRAPHQL_URL=http://localhost:1337/graphql

# Strapi API token (optional if Strapi is public)
STRAPI_TOKEN=

# Site URL for sitemap/OG
PUBLIC_SITE_URL=http://localhost:4321

# Environment flag (development | production)
PUBLIC_ENV=development

# Mock toggle (defaults to true; set to false to hit Strapi during build)
USE_MOCK_DATA=true
# STRAPI_USE_MOCK=true
